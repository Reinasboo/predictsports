# ============================================
# PREDICTSPORTS PRODUCTION ENVIRONMENT
# ============================================
# Copy to .env and update with real values

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://predictsports:secure_password@db.supabase.co:5432/postgres
POSTGRES_USER=predictsports
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=predictsports_db
DB_HOST=localhost
DB_PORT=5432

# ============================================
# CACHE (Redis)
# ============================================
REDIS_URL=redis://:password@upstash.io:32156
REDIS_HOST=upstash.io
REDIS_PORT=32156
REDIS_PASSWORD=secure_password

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
ENVIRONMENT=production
DEPLOYMENT_ENV=railway

# ============================================
# BACKEND SERVICES
# ============================================
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
BACKEND_API_URL=https://api.predictsports.com
API_SECRET_KEY=your_jwt_secret_key_change_in_production

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=https://predictsports.com
NEXT_PUBLIC_API_URL=https://api.predictsports.com
NEXT_PUBLIC_WS_URL=wss://api.predictsports.com/ws

# ============================================
# PYTHON ML ENGINE
# ============================================
PYTHON_ENGINE_URL=http://engine:8000
PYTHON_ENGINE_PORT=8000
ML_MODEL_PATH=/models/

# ============================================
# PRIMARY DATA PROVIDERS
# ============================================

# API-Football via RapidAPI
# Sign up: https://rapidapi.com/api-sports/api/api-football
RAPID_API_KEY=your_rapidapi_key_here
RAPID_API_HOST=api-football-v1.p.rapidapi.com
API_FOOTBALL_REQUESTS_PER_MIN=10

# Football-Data.org
# Sign up: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=44de5e960da54531b4d2e06c3bcc58a1
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# The Odds API
# Sign up: https://the-odds-api.com/
ODDS_API_KEY=885345844d27e37da2888051d1dd3004
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# OpenWeatherMap API
# Sign up: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# SportMonks API
# Sign up: https://www.sportmonks.com/
SPORTMONKS_API_KEY=9dcTIiv8Vq7gHI1lLqmojfIh0hqsH5Syxd24KLzr7tNli8LsWrKdPh4mBfOG
SPORTMONKS_API_VERSION=v3

# ============================================
# BACKUP & FALLBACK PROVIDERS
# ============================================

# OpenLigaDB (Bundesliga)
OPENLIGADB_BASE_URL=https://www.openligadb.de/api

# ScoreBat API
SCOREBAT_BASE_URL=https://www.scorebat.com/video-api/v3

# ============================================
# WEB SCRAPING CONFIGURATION
# ============================================

# Transfermarkt Scraper
TRANSFERMARKT_ENABLED=true
TRANSFERMARKT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# WorldFootball.net Scraper
WORLDFOOTBALL_ENABLED=true
WORLDFOOTBALL_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Understat xG Scraper
UNDERSTAT_ENABLED=true
UNDERSTAT_BASE_URL=https://understat.com

# StatsBomb Open Data
STATSBOMB_ENABLED=true
STATSBOMB_GITHUB_URL=https://raw.githubusercontent.com/statsbomb/StatsBomb-API

# ============================================
# DATA PIPELINE CONFIGURATION
# ============================================

# Cron schedule for data ingestion
FIXTURES_SYNC_SCHEDULE=0 2 * * *
XSTATS_SYNC_SCHEDULE=0 3 * * *
INJURIES_SYNC_SCHEDULE=0 */4 * * *
ODDS_SYNC_SCHEDULE=*/30 * * * *
WEATHER_SYNC_SCHEDULE=0 */6 * * *
PREDICTIONS_SYNC_SCHEDULE=*/15 * * * *

# Pipeline settings
PIPELINE_BATCH_SIZE=50
PIPELINE_TIMEOUT_SECONDS=300
MAX_CONCURRENT_REQUESTS=5

# ============================================
# WEBSOCKET & REAL-TIME
# ============================================

SOCKET_IO_ORIGINS=https://predictsports.com,https://www.predictsports.com
SOCKET_IO_TRANSPORTS=websocket,polling
WS_HEARTBEAT_INTERVAL=30000

# ============================================
# JOB QUEUE (BullMQ)
# ============================================

BULL_QUEUE_PREFIX=predictsports_
BULL_RETENTION_DAYS=7
BULL_MAX_ATTEMPTS=3

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

JWT_SECRET=your_jwt_secret_key_256_char_min
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# CORS Configuration
CORS_ORIGIN=https://predictsports.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Key rotation
API_KEY_ROTATION_DAYS=30

# ============================================
# LOGGING & MONITORING
# ============================================

LOG_LEVEL=info
REQUEST_LOGGING=true
PERFORMANCE_METRICS=true

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project
SENTRY_ENVIRONMENT=production

# ============================================
# EXTERNAL SERVICES
# ============================================

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_key_here
SENDGRID_FROM_EMAIL=noreply@predictsports.com

# Cloudinary Media
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ============================================
# DEVELOPMENT ONLY (NOT FOR PRODUCTION)
# ============================================

DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DB_ON_START=false
VERBOSE_LOGGING=false

# SERVICE URLs
ENGINE_URL=http://localhost:8000
BACKEND_URL=http://localhost:3001
SOCKET_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# FRONTEND (NEXT.js)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# OPTIONAL: Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# OPTIONAL: External Services
SENDGRID_API_KEY=
AWS_REGION=us-east-1
